{
  "name": "goal-tracker",
  "version": "2.0.0",
  "private": true,
  "description":
    "Demo app used in Delicious Insightsâ€™ Modern Web Apps training course",
  "scripts": {
    "build":
      "cross-env NODE_ENV=production webpack --progress --config webpack/webpack.config.js",
    "doc": "rimraf doc && groc",
    "install-exts": "node .vscode/install-recommended-exts.js",
    "lint": "eslint .",
    "start": "node tools/dev-server.js",
    "start:d": "webpack-dashboard -- npm start",
    "test": "jest",
    "test:cov": "npm test -- --coverage",
    "test:watch": "npm test -- --watch"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": ["last 2 versions", "> 1%", "safari >= 10"],
            "node": "current"
          }
        }
      ],
      "react",
      "stage-3"
    ],
    "plugins": ["transform-class-properties", "transform-decorators-legacy"],
    "env": {
      "development": {
        "plugins": ["react-hot-loader/babel"]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "plugin:react/recommended",
      "plugin:import/errors"
    ],
    "plugins": ["prettier", "react", "import"],
    "parser": "babel-eslint",
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "always",
          "semi": false,
          "singleQuote": true,
          "trailingComma": "es5"
        }
      ],
      "no-irregular-whitespace": 0
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    }
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.js"],
    "notify": true,
    "snapshotSerializers": ["<rootDir>/node_modules/enzyme-to-json/serializer"],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setup.js"
  },
  "keywords": ["node", "nodejs", "training", "goals", "tracker", "demo"],
  "author": "Christophe Porteneuve <christophe@delicious-insights.com>",
  "license": "No-License (see LICENSE file)",
  "dependencies": {
    "@redux-offline/redux-offline": "^2.2.1",
    "airbnb-prop-types": "^2.8.1",
    "autobind-decorator": "^2.1.0",
    "localforage": "^1.5.5",
    "material-ui": "^0.20.0",
    "moment": "^2.19.4",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-document-title": "^2.0.2",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "reduce-reducers": "^0.1.2",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.2",
    "babel-core": "^6.24.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-3": "^6.22.0",
    "body-parser": "^1.18.2",
    "chai": "^4.0.2",
    "chai-enzyme": "^1.0.0-beta.0",
    "chai-jest-diff": "^1.0.1",
    "chai-jest-snapshot": "^2.0.0",
    "chalk": "^2.3.0",
    "clean-webpack-plugin": "^0.1.17",
    "colors": "^1.1.2",
    "copy-webpack-plugin": "^4.2.3",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.0",
    "cssnano": "^3.10.0",
    "dirty-chai": "^2.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.13.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "groc": "^0.8.0",
    "jest": "^21.2.1",
    "json5": "^0.5.1",
    "morgan": "^1.9.0",
    "netlify-cli": "^1.2.2",
    "node-notifier": "^5.1.2",
    "offline-plugin": "^4.8.5",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "postcss-loader": "^2.0.9",
    "prettier": "^1.9.1",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "redbox-react": "^1.5.0",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0",
    "style-loader": "^0.19.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dashboard": "^1.0.2",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1"
  }
}
